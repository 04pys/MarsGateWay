<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rowRoverIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/rowRoverSolTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="sol : 3224"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/rowRoverIv"
        />

    <TextView
        android:id="@+id/rowRoverRoverTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="rover : Curiosity"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/rowRoverSolTv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>