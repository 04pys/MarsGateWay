<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20sp"
    android:background="@drawable/row_rover_background"
    android:elevation="10dp"
    android:padding="15sp">

    <ImageView
        android:id="@+id/rowRoverIv"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_margin="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/test_picture" />

    <TextView
        android:id="@+id/rowRoverDateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/rowRoverIv"
        tools:text="date : 2021-06-31" />

    <TextView
        android:id="@+id/rowRoverCameraTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"

        app:layout_constraintTop_toBottomOf="@id/rowRoverDateTv"
        tools:text="camera : MAST" />

    <TextView
        android:id="@+id/rowRoverSolTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp"

        app:layout_constraintTop_toBottomOf="@id/rowRoverCameraTv"
        tools:text="sol : 3224" />

    <TextView
        android:id="@+id/rowRoverRoverTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp"

        app:layout_constraintTop_toBottomOf="@id/rowRoverSolTv"
        tools:text="rover : Curiosity" />

</androidx.constraintlayout.widget.ConstraintLayout>

